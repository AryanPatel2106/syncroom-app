<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SyncRoom - Real-Time Collaboration</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    /* Modal Styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.6);
      backdrop-filter: blur(5px);
      animation: fadeIn 0.3s ease-out;
    }
    
    .modal.active {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .modal-content {
      background-color: white;
      margin: auto;
      padding: 0;
      border-radius: 16px;
      width: 90%;
      max-width: 900px;
      max-height: 90vh;
      overflow-y: auto;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      animation: slideUp 0.4s ease-out;
      position: relative;
    }
    
    .dark .modal-content {
      background-color: #1f2937;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes slideUp {
      from { 
        opacity: 0;
        transform: translateY(50px);
      }
      to { 
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .close-btn {
      position: absolute;
      right: 20px;
      top: 20px;
      font-size: 28px;
      font-weight: bold;
      color: #999;
      cursor: pointer;
      transition: all 0.3s ease;
      z-index: 10;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      background: rgba(0,0,0,0.05);
    }
    
    .close-btn:hover {
      color: #333;
      background: rgba(0,0,0,0.1);
      transform: rotate(90deg);
    }
    
    .dark .close-btn {
      color: #ccc;
      background: rgba(255,255,255,0.1);
    }
    
    .dark .close-btn:hover {
      color: #fff;
      background: rgba(255,255,255,0.2);
    }
    
    /* Team Member Card */
    .team-card {
      transition: all 0.3s ease;
    }
    
    .team-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(99, 102, 241, 0.3);
    }
    
    /* Video Container */
    .video-container {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
      border-radius: 12px;
    }
    
    .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    
    /* Scroll Animation Setup */
    .fade-in-up {
      opacity: 0;
      transform: translateY(30px);
      transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }
    .fade-in-up.is-visible {
      opacity: 1;
      transform: translateY(0);
    }
    
    .features-grid .fade-in-up:nth-child(1) { transition-delay: 0.1s; }
    .features-grid .fade-in-up:nth-child(2) { transition-delay: 0.2s; }
    .features-grid .fade-in-up:nth-child(3) { transition-delay: 0.3s; }
    .hero-content .fade-in-up:nth-child(1) { transition-delay: 0.1s; }
    .hero-content .fade-in-up:nth-child(2) { transition-delay: 0.2s; }
    .hero-content .fade-in-up:nth-child(3) { transition-delay: 0.3s; }
    
    /* Moving Doodle Background */
    @keyframes move-doodles {
      0% { background-position: 0 0; }
      100% { background-position: 1000px 1000px; }
    }
    .hero-doodle-bg {
      background-color: #F9FAFB;
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="400" height="400" opacity="0.05"><circle cx="50" cy="50" r="2" fill="%23667eea"/><circle cx="150" cy="100" r="2" fill="%23764ba2"/><circle cx="250" cy="150" r="2" fill="%23f093fb"/><circle cx="350" cy="200" r="2" fill="%234facfe"/><circle cx="100" cy="250" r="2" fill="%23667eea"/><circle cx="200" cy="300" r="2" fill="%23764ba2"/><circle cx="300" cy="350" r="2" fill="%23f093fb"/></svg>');
      background-repeat: repeat;
      background-size: 400px;
      animation: move-doodles 120s linear infinite;
    }
    .dark .hero-doodle-bg {
      background-color: #111827;
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="400" height="400" opacity="0.1"><circle cx="50" cy="50" r="2" fill="%23667eea"/><circle cx="150" cy="100" r="2" fill="%23764ba2"/><circle cx="250" cy="150" r="2" fill="%23f093fb"/><circle cx="350" cy="200" r="2" fill="%234facfe"/><circle cx="100" cy="250" r="2" fill="%23667eea"/><circle cx="200" cy="300" r="2" fill="%23764ba2"/><circle cx="300" cy="350" r="2" fill="%23f093fb"/></svg>');
    }
    
    /* Animated Orbs */
    @keyframes orbit-1 {
      0% { transform: translate(0, 0) rotate(0deg); }
      25% { transform: translate(100px, -50px) rotate(90deg); }
      50% { transform: translate(150px, 50px) rotate(180deg); }
      75% { transform: translate(50px, 100px) rotate(270deg); }
      100% { transform: translate(0, 0) rotate(360deg); }
    }
    @keyframes orbit-2 {
      0% { transform: translate(0, 0) rotate(0deg) scale(1); }
      33% { transform: translate(-80px, 100px) rotate(120deg) scale(1.2); }
      66% { transform: translate(-120px, -60px) rotate(240deg) scale(0.9); }
      100% { transform: translate(0, 0) rotate(360deg) scale(1); }
    }
    @keyframes orbit-3 {
      0% { transform: translate(0, 0) rotate(0deg); }
      20% { transform: translate(120px, 80px) rotate(72deg); }
      40% { transform: translate(80px, -100px) rotate(144deg); }
      60% { transform: translate(-100px, -50px) rotate(216deg); }
      80% { transform: translate(-80px, 80px) rotate(288deg); }
      100% { transform: translate(0, 0) rotate(360deg); }
    }
    .animated-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(40px);
      opacity: 0.5;
      mix-blend-mode: multiply;
    }
    .dark .animated-orb {
      mix-blend-mode: screen;
      opacity: 0.4;
    }
    .orb-1 {
      width: 300px;
      height: 300px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      top: 10%;
      left: 10%;
      animation: orbit-1 25s ease-in-out infinite;
    }
    .orb-2 {
      width: 250px;
      height: 250px;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      top: 40%;
      right: 15%;
      animation: orbit-2 20s ease-in-out infinite;
    }
    .orb-3 {
      width: 200px;
      height: 200px;
      background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
      bottom: 15%;
      left: 20%;
      animation: orbit-3 30s ease-in-out infinite;
    }
    
    /* Pulsing Glow Effect */
    @keyframes pulse-glow {
      0%, 100% { 
        box-shadow: 0 0 20px rgba(99, 102, 241, 0.5),
                    0 0 40px rgba(99, 102, 241, 0.3),
                    0 0 60px rgba(99, 102, 241, 0.1);
        transform: scale(1);
      }
      50% { 
        box-shadow: 0 0 30px rgba(99, 102, 241, 0.8),
                    0 0 60px rgba(99, 102, 241, 0.5),
                    0 0 90px rgba(99, 102, 241, 0.2);
        transform: scale(1.05);
      }
    }
    .feature-card {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .feature-card:hover {
      animation: pulse-glow 2s ease-in-out infinite;
    }
    
    /* Floating Icons & Sparkles */
    @keyframes tumble-float {
      0% { transform: translateY(0) translateX(0) rotateX(0deg) rotateY(0deg) rotateZ(0deg); opacity: 0.7; }
      25% { transform: translateY(-20px) translateX(15px) rotateX(20deg) rotateY(45deg) rotateZ(10deg); opacity: 0.8; }
      50% { transform: translateY(10px) translateX(-20px) rotateX(90deg) rotateY(0deg) rotateZ(-20deg); opacity: 0.9; }
      75% { transform: translateY(-10px) translateX(10px) rotateX(20deg) rotateY(-45deg) rotateZ(10deg); opacity: 0.8; }
      100% { transform: translateY(0) translateX(0) rotateX(0deg) rotateY(0deg) rotateZ(0deg); opacity: 0.7; }
    }
    
    @keyframes twinkle-float {
      0% { transform: translateY(0) scale(0.8) rotate(0deg); opacity: 0.5; }
      50% { transform: translateY(-10px) scale(1) rotate(180deg); opacity: 1; }
      100% { transform: translateY(0) scale(0.8) rotate(360deg); opacity: 0.5; }
    }
    .hero-icon {
      position: absolute;
      display: block;
      background-size: contain;
      background-repeat: no-repeat;
      z-index: 5;
    }
    .icon-chat {
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23667eea" opacity="0.6"><path d="M21.99 4c0-1.1-.89-2-1.99-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h14l4 4-.01-18z"/></svg>');
      width: 60px; height: 60px;
      top: 10%; left: 10%;
      animation: tumble-float 25s linear infinite -2s;
    }
    
    .icon-file {
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23f093fb" opacity="0.6"><path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6z"/></svg>');
      width: 50px; height: 50px;
      top: 20%; left: 80%;
      animation: tumble-float 20s linear infinite -5s;
    }
    .icon-users {
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%234facfe" opacity="0.6"><path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V18h14v-1.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V18h6v-1.5c0-2.33-4.67-3.5-7-3.5z"/></svg>');
      width: 70px; height: 70px;
      top: 75%; left: 60%;
      animation: tumble-float 30s linear infinite -8s;
    }
    .icon-upload {
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23764ba2" opacity="0.6"><path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z"/></svg>');
      width: 60px; height: 60px;
      top: 80%; left: 15%;
      animation: tumble-float 22s linear infinite -12s;
    }
    .icon-sparkle {
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23fbbf24" opacity="0.8"><path d="M12 0l2.5 9.5L24 12l-9.5 2.5L12 24l-2.5-9.5L0 12l9.5-2.5L12 0z"/></svg>');
      width: 20px; height: 20px;
      animation: twinkle-float 8s ease-in-out infinite;
    }
    .sparkle-1 { top: 15%; left: 50%; animation-duration: 7s; animation-delay: -1s; }
    .sparkle-2 { top: 60%; left: 90%; animation-duration: 6s; animation-delay: -3s; }
    .sparkle-3 { top: 70%; left: 30%; animation-duration: 8s; animation-delay: -5s; }
    .sparkle-4 { top: 30%; left: 30%; animation-duration: 5s; animation-delay: -2s; }
    
    .loader {
      border-top-color: theme('colors.indigo.600');
      animation: spin 1s linear infinite;
    }
    .dark .loader {
      border-top-color: theme('colors.indigo.400');
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    /* Watery Button Effects */
    @keyframes water-wave {
      0% {
        transform: translateX(-100%) translateY(-50%) rotate(0deg);
      }
      100% {
        transform: translateX(100%) translateY(-50%) rotate(360deg);
      }
    }
    
    .liquid-button {
      position: relative;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.23, 1, 0.320, 1);
    }
    
    .liquid-button::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.6);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }
    
    .liquid-button:hover::before {
      width: 300px;
      height: 300px;
    }
    
    .liquid-button::after {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.3), 
        transparent
      );
      animation: water-wave 3s linear infinite;
    }
    
    .liquid-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px -5px rgba(99, 102, 241, 0.5),
                  0 8px 10px -6px rgba(99, 102, 241, 0.4);
    }
    
    .liquid-button:active {
      transform: translateY(0);
    }
    
    .water-nav {
      position: relative;
      overflow: hidden;
    }
    
    .water-nav::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 200%;
      height: 100%;
      background: linear-gradient(90deg,
        transparent,
        rgba(99, 102, 241, 0.1),
        transparent
      );
      animation: water-wave 8s linear infinite;
    }
    
    .water-card {
      position: relative;
      overflow: hidden;
      transition: all 0.5s cubic-bezier(0.23, 1, 0.320, 1);
    }
    
    .water-card::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(99, 102, 241, 0.3) 0%, transparent 70%);
      transform: translate(-50%, -50%);
      transition: width 0.8s ease-out, height 0.8s ease-out;
    }
    
    .water-card:hover::before {
      width: 500px;
      height: 500px;
    }
    
    .water-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 40px -10px rgba(99, 102, 241, 0.4);
    }
    
    @keyframes ripple {
      0% {
        transform: scale(0);
        opacity: 1;
      }
      100% {
        transform: scale(4);
        opacity: 0;
      }
    }
    
    .ripple-effect {
      position: relative;
      overflow: hidden;
    }
    
    .ripple {
      position: absolute;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.6);
      animation: ripple 0.6s ease-out;
      pointer-events: none;
    }
    
    .glass-effect {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .dark .glass-effect {
      background: rgba(17, 24, 39, 0.3);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    @keyframes float-gentle {
      0%, 100% {
        transform: translateY(0px) rotate(0deg);
      }
      50% {
        transform: translateY(-20px) rotate(5deg);
      }
    }
    
    .float-animation {
      animation: float-gentle 6s ease-in-out infinite;
    }
  </style>
</head>
