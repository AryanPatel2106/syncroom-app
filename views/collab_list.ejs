<%- include('../partials/header') %>

<div class="container mx-auto mt-10 p-4">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-4xl font-bold text-white">Collaborative Documents for <%= group.name %></h1>
        <a href="/chat/<%= group._id %>" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
            Back to Chat
        </a>
    </div>

    <% if (docs.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% docs.forEach(doc => { %>
                <div class="bg-gray-800 border border-gray-700 rounded-lg shadow-lg p-6 hover:shadow-cyan-500/50 transition-shadow duration-300">
                    <h2 class="text-2xl font-semibold text-cyan-400 mb-2"><%= doc.name %></h2>
                    <p class="text-gray-400 mb-4">
                        Created on <%= new Date(doc.createdAt).toLocaleDateString() %>
                    </p>
                    <a href="/collab/<%= doc._id %>" class="inline-block bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
                        Open Editor
                    </a>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-16 bg-gray-800 border border-gray-700 rounded-lg">
            <p class="text-xl text-gray-400">No collaborative documents have been created for this group yet.</p>
            <p class="text-gray-500 mt-2">Go back to the chat to upload a file and start a new session.</p>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
