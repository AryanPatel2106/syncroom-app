                .catch(error => {
                    console.error('Delete error:', error);
                    alert('An error occurred while deleting the file.');
                    // Reset button
                    button.disabled = false;
                    button.innerHTML = '<i class="fas fa-trash mr-1"></i> Delete';
                });
